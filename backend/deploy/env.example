# DeadOrNot Backend Environment Variables
# 复制此文件为 .env 并填写实际值

# ============================================
# 服务器配置
# ============================================
PORT=8080

# ============================================
# 数据库配置
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=deadornot

# ============================================
# APNs 配置（iOS 推送通知）
# ============================================
# APNs Key ID（从 Apple Developer 获取）
APNS_KEY_ID=your_key_id
# APNs Team ID（从 Apple Developer 获取）
APNS_TEAM_ID=your_team_id
# Bundle ID（应用标识符）
APNS_BUNDLE_ID=com.yourcompany.deadornot
# APNs Key 文件路径（.p8 文件）
APNS_KEY_PATH=/opt/deadornot/backend/config/AuthKey_XXXXXXXX.p8
# 是否使用生产环境（true/false）
APNS_PRODUCTION=true

# ============================================
# 邮件配置
# ============================================
# 邮件服务提供商：aliyun 或 smtp
EMAIL_PROVIDER=aliyun

# 阿里云邮件服务配置
ALIYUN_REGION=cn-hangzhou
ALIYUN_ACCESS_KEY=your_access_key
ALIYUN_ACCESS_SECRET=your_access_secret

# SMTP 配置（如果 EMAIL_PROVIDER=smtp）
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password

# 发件人信息
FROM_EMAIL=noreply@example.com
FROM_NAME=死了么

# ============================================
# Gin 框架配置（可选）
# ============================================
# GIN_MODE=release  # release, debug, test
